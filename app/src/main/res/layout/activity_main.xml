<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="118dp"
        android:layout_height="37dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="#FFC107"
        android:fontFamily="sans-serif-black"
        android:text="Пользователь"
        android:textAllCaps="true"
        android:textColor="#B62424"
        android:textStyle="bold|italic"
        android:typeface="normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="#F2F4F6"
        android:hint="Сообщение"
        android:textAllCaps="false"
        android:textColor="#D10A0A"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:clickable="true"
        android:text="НАЖМИ"
        app:backgroundTint="#009688"
        app:iconTint="#7C1A1A"
        app:strokeColor="#CF4848"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="329dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:text="Запомнить меня"
        android:textAllCaps="true"
        android:textColor="#AF0E0E"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="415dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="#E1EAD6"
        android:lineSpacingExtra="5sp"
        android:text="Мужской"
        android:textAllCaps="true"
        android:textColor="#019A8C"
        android:textStyle="bold|italic"
        app:buttonTint="#03A9F4"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="459dp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="#F44336"
        android:text="Выйти"
        android:textAllCaps="true"
        android:textColor="#3F51B5"
        android:textOff="OFF"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="517dp" />

</LinearLayout>